<Window x:Class="ScholarView.UpdateGrade"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ScholarView"
        mc:Ignorable="d"
        Title="Update Grade" Height="250" Width="250">
    <Grid>
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#3b5998" Offset="0"/>
                <GradientStop Color="LightPink" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>
        <Label Content="Student:" HorizontalAlignment="Left" Margin="10,17,0,0" VerticalAlignment="Top"/>
        <Label Content="" Name="LblStudentName"  HorizontalAlignment="Left" Margin="64,21,0,0" VerticalAlignment="Top" />
        <Label Content="Grade:" HorizontalAlignment="Left" Margin="10,54,0,0" VerticalAlignment="Top"/>
        <TextBox Name="TbxGrade" HorizontalAlignment="Left" Margin="64,58,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="44"/>
        <Button IsDefault="True" Name="btnDialogSave" Click="btnDialogSave_Click" Width="60" Height="20" Margin="20,128,120,36">_Save</Button>
        <Button IsCancel="True" Width="60" Height="20" Margin="124,128,16,36" RenderTransformOrigin="0.494,-0.535">_Cancel</Button>
    </Grid>
</Window>
